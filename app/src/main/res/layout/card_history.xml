<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="#D7EDFF">

    <androidx.appcompat.widget.AppCompatImageView

        android:id="@+id/img_star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_star" />

    <RelativeLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/txt_point"
        android:layout_toEndOf="@id/img_star"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Mengerjakan Tantangan Hafalan Quran Level 1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@id/txt_title_history"
            android:id="@+id/txt_surah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An-nas"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentBottom="true"
            android:textSize="10sp"
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Senin, 20 Januari 2020"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_bold"
        tools:text=" +50 XP" />

</RelativeLayout>