<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2FF99"
    android:orientation="vertical"
    tools:context=".challenge.OverviewChallengeActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_arrow_left_black_48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_challenge_title"
            android:layout_marginTop="80dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Tantangan Hafalan untuk kamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:text="Surat Al-Falaq"
            android:id="@+id/txt_surah_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Susun surat hafalan sampai selesai dan ayatnya di Baca ya agar kamu dapat pahala."
            android:id="@+id/txt_info_type_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Poin : 50XP"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/txt_point_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Waktu : 1 Menit"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/txt_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_play_challenge"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/ic_button_start_challenge"
            android:textAllCaps="false"
            android:text="Ambil Tantangan"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>