<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".challenge.ListChallengeActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_arrow_left_black_48dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:text="Selesaikan 3 urutan tantangan hafalan dibawah secara berurutan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
        
        
        <androidx.cardview.widget.CardView
            android:background="?selectableItemBackground"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <RelativeLayout
                android:background="@drawable/ic_rect_challenge_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/txt_info_one"
                    android:text="Tantangan Hafalan 1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/txt_info_one"
                    android:src="@drawable/ic_arrow_go_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="?selectableItemBackground"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <RelativeLayout
                android:background="@drawable/ic_rect_challenge_undone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/txt_info_two"
                    android:text="Tantangan Hafalan 2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/txt_info_two"
                    android:src="@drawable/ic_arrow_go_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="?selectableItemBackground"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <RelativeLayout
                android:background="@drawable/ic_rect_challenge_undone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:id="@+id/txt_info_three"
                    android:text="Tantangan Hafalan 3"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/txt_info_three"
                    android:src="@drawable/ic_arrow_go_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>