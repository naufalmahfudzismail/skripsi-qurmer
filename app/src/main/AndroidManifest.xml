<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.dev.qurmer">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".config.Qurmer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".intro.OnBoardActivity"></activity>
        <activity android:name=".media.SurahPlayerActivity" />
        <activity android:name=".memorize.MemorizeActivity" />
        <activity android:name=".challenge.ChallengeActivity" />
        <activity android:name=".intro.RegisterActivity" />
        <activity android:name=".intro.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".utils.AlarmNotification" />
        <service android:name=".utils.MediaPlayerService" />
    </application>

</manifest>